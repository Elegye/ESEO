{% extends 'admin.html.twig' %}

{% block title %}Liste des classes{% endblock %}

{% block body %}
<div class="row">
  <div class="col-md-12">
    <div class="card card-outline card-primary">
      <div class="card-header">
        <div class="card-title">Liste des classes</div>
        <div class="card-tools"> </div>
      </div>
      <div class="card-body p-0">
        <table class="table">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Nombre d'élèves</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for classroom in classrooms %}
                <tr>
                    <td>{{ classroom.name }}</td>
                    <td>{{ classroom.users|length }}</td>
                    <td>
                        <a href="{{ path('classroom_edit', {'id': classroom.id}) }}">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">Aucune classe enregistrée</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
      </div>
    </div>
    <a href="{{ path('classroom_new') }}" class="btn btn-info">Nouvelle classe</a>
  </div>
</div>
{% endblock %}
