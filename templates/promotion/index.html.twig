{% extends 'admin.html.twig' %}

{% block title %}Gestion des promos{% endblock %}

{% block body %}
<div class="row">
  <div class="col-md-12">
    <div class="card card-outline card-primary">
      <div class="card-header">
        <div class="card-title">Liste des promotions</div>
        <div class="card-tools"> </div>
      </div>
      <div class="card-body p-0">
        <table class="table">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Années</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for promotion in promotions %}
                <tr>
                    <td>{{ promotion.nom }}</td>
                    <td>{{ promotion.period ? promotion.period.format('%y year(s), %m month(s), %d day(s)') : '' }}</td>
                    <td>
                        <a href="{{ path('promotion_show', {'id': promotion.id}) }}">show</a>
                        <a href="{{ path('promotion_edit', {'id': promotion.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">Aucune promotion enregistrée</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
      </div>
    </div>
  </div>
    <a href="{{ path('promotion_new') }}">Créer nouvelle promotion</a>
</div>
{% endblock %}
